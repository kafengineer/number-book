<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView

                android:layout_height="300dp" tools:src="@tools:sample/avatars" android:id="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                app:civ_border_color="#CC000000"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/NameFamily"
                app:layout_constraintEnd_toEndOf="@+id/imageView3" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:src="@android:drawable/stat_sys_speakerphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/callButton" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:src="@android:drawable/presence_video_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" android:id="@+id/videoCallButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/callButton"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:src="@drawable/ic_message_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" android:id="@+id/messageButton"
                app:layout_constraintStart_toEndOf="@+id/callButton" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/callButton"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:id="@+id/linearLayout">
            <TextView
                    android:text="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2"/>
            <TextView
                    android:text="TextView"
                    android:textStyle="bold"
                    android:textSize="16sp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/phone1"
                    android:layout_marginBottom="16dp"/>
            <TextView
                    android:text="mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4"/>
            <TextView
                    android:text="TextView"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/phone2"
                    android:layout_marginBottom="16dp"/>
            <TextView
                    android:text="note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6"/>
            <TextView
                    android:text="TextView"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:maxLines="5"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    android:layout_marginBottom="16dp" android:singleLine="false"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>